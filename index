<body>
    <!-- Fiori decorativi di sfondo -->
    <div class="flower flower-1">🌸</div>
    <div class="flower flower-2">🌺</div>
    <div class="flower flower-3">🌷</div>
    <div class="flower flower-4">🌼</div>
    <div class="flower flower-5">🌻</div>

    <div class="header">
        <div class="container">
            <h1>🎵 Festival Musicale Romano di Lombardia 2025 🎵</h1>
            <p class="subtitle">Classe 4 ASU - Ascolta i brani di Wele Abou, vota e decidi il vincitore!</p>
            <div class="stats">
                <div class="stat-item">
                    <div class="stat-number" id="totalSongs">0</div>
                    <div class="stat-label">Brani in gara</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="totalVotes">0</div>
                    <div class="stat-label">Voti totali</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="avgRating">0.0</div>
                    <div class="stat-label">Valutazione media</div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="container">
            <div class="file-upload">
                <h2>📁 Carica i brani di Wele Abou</h2>
                <p>Classe 4 ASU - Trascina qui i file video o clicca per selezionarli</p>
                <div class="upload-area" id="uploadArea">
                    <div style="font-size: 3em; margin-bottom: 15px;">📤</div>
                    <p><strong>Clicca qui o trascina i file video</strong></p>
                    <p style="color: #718096; margin-top: 10px;">Formati supportati: MP4, MOV, AVI, WEBM</p>
                </div>
                <input type="file" id="fileInput" multiple accept="video/*,.mp4,.mov,.avi,.webm">
            </div>

            <div class="controls">
                <button class="btn" onclick="showResults()">🏆 Mostra Classifica</button>
                <button class="btn secondary" onclick="resetVotes()">🔄 Reset Voti</button>
            </div>

            <div class="songs-grid" id="songsContainer">
                <!-- Le canzoni verranno aggiunte dinamicamente qui -->
            </div>

            <div class="leaderboard" id="leaderboard" style="display: none;">
                <h2>🏆 Classifica Festival Classe 4 ASU</h2>
                <div class="podium" id="podium">
                    <!-- Il podio verrà generato dinamicamente -->
                </div>
            </div>
        </div>
    </div>

    <div class="notification" id="notification"></div>

    <script>
        let songs = [];
        let songCounter = 0;

        // Gestione upload file
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');

            // Click sull'area di upload
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });

            // Drag and drop
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#48bb78';
                uploadArea.style.backgroundColor = 'rgba(72, 187, 120, 0.1)';
            });

            uploadArea.addEventListener('dragleave', function() {
                uploadArea.style.borderColor = '#cbd5e0';
                uploadArea.style.backgroundColor = 'transparent';
            });

            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#cbd5e0';
                uploadArea.style.backgroundColor = 'transparent';
                handleFiles(e.dataTransfer.files);
            });

            fileInput.addEventListener('change', function(e) {
                handleFiles(e.target.files);
            });
        });

        function handleFiles(files) {
            Array.from(files).forEach(file => {
                if (file.type.startsWith('video/') || 
                    file.name.toLowerCase().includes('.mp4') || 
                    file.name.toLowerCase().includes('.mov') || 
                    file.name.toLowerCase().includes('.avi') ||
                    file.name.toLowerCase().includes('.webm')) {
                    addSong(file);
                } else {
                    showNotification(`⚠️ File "${file.name}" non è un video supportato`);
                }
            });
        }

        function addSong(file) {
            try {
                const url = URL.createObjectURL(file);
                songCounter++;
                
                const song = {
                    id: songCounter,
                    title: file.name.replace(/\.[^/.]+$/, ""),
                    artist: "Wele Abou 🎤",
                    url: url,
                    votes: 0,
                    ratings: [],
                    avgRating: 0,
                    currentUserRating: 0
                };
                
                songs.push(song);
                createSongCard(song);
                updateStats();
                showNotification(`✅ Brano "${song.title}" aggiunto con successo!`);
            } catch (error) {
                showNotification(`❌ Errore nel caricamento del file: ${file.name}`);
                console.error('Errore caricamento file:', error);
            }
        }

        function createSongCard(song) {
            const container = document.getElementById('songsContainer');
            const songCard = document.createElement('div');
            songCard.className = 'song-card';
            songCard.id = `song-${song.id}`;
            
            songCard.innerHTML = `
                <div class="song-info">
                    <div class="song-title">🎵 ${song.title}</div>
                    <div class="song-artist">🎤 ${song.artist}</div>
                </div>
                <div class="video-container">
                    <video controls preload="metadata" id="video-${song.id}">
                        <source src="${song.url}" type="video/mp4">
                        <source src="${song.url}">
                        Il tuo browser non supporta la riproduzione video.
                    </video>
                </div>
                <div class="voting-section">
                    <div class="rating-instruction">🌟 Clicca sulle stelle per valutare:</div>
                    <div class="rating-stars" id="stars-${song.id}">
                        <button class="star" onclick="selectRating(${song.id}, 1)">⭐</button>
                        <button class="star" onclick="selectRating(${song.id}, 2)">⭐</button>
                        <button class="star" onclick="selectRating(${song.id}, 3)">⭐</button>
                        <button class="star" onclick="selectRating(${song.id}, 4)">⭐</button>
                        <button class="star" onclick="selectRating(${song.id}, 5)">⭐</button>
                    </div>
                    <div class="current-rating" id="current-rating-${song.id}">
                        Nessuna valutazione selezionata
                    </div>
                    <button class="vote-btn" onclick="submitVote(${song.id})" id="vote-btn-${song.id}">
                        🌸 Conferma il tuo voto 🌸
                    </button>
                    <div class="vote-count" id="vote-count-${song.id}">
                        🌺 Voti: 0 | Valutazione media: 0.0⭐
                    </div>
                </div>
            `;
            
            container.appendChild(songCard);

            // Test il video
            const video = document.getElementById(`video-${song.id}`);
            video.addEventListener('loadeddata', function() {
                console.log(`Video ${song.id} caricato correttamente`);
            });

            video.addEventListener('error', function(e) {
                console.error(`Errore video ${song.id}:`, e);
                showNotification(`⚠️ Problema con il video: ${song.title}`);
            });
        }

        function selectRating(songId, rating) {
            console.log(`Selezionato rating ${rating} per canzone ${songId}`);
            
            // Trova la canzone
            const song = songs.find(s => s.id === songId);
            if (!song) return;
            
            // Salva il rating corrente
            song.currentUserRating = rating;
            
            // Aggiorna le stelle visivamente
            const starsContainer = document.getElementById(`stars-${songId}`);
            const stars = starsContainer.querySelectorAll('.star');
            
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('selected');
                } else {
                    star.classList.remove('selected');
                }
            });
            
            // Aggiorna il testo del rating corrente
            const currentRatingElement = document.getElementById(`current-rating-${songId}`);
            currentRatingElement.textContent = `Hai selezionato: ${rating} stelle ⭐`;
            currentRatingElement.style.color = '#fbbf24';
            
            showNotification(`⭐ Selezionate ${rating} stelle per "${song.title}"`);
        }

        function submitVote(songId) {
            const song = songs.find(s => s.id === songId);
            if (!song) {
                showNotification('❌ Errore: canzone non trovata');
                return;
            }
            
            if (song.currentUserRating === 0) {
                showNotification('⚠️ Prima seleziona una valutazione cliccando sulle stelle!');
                return;
            }
            
            // Registra il voto
            song.votes++;
            song.ratings.push(song.currentUserRating);
            song.avgRating = song.ratings.reduce((a, b) => a + b, 0) / song.ratings.length;
            
            // Disabilita il pulsante
            const voteBtn = document.getElementById(`vote-btn-${songId}`);
            voteBtn.disabled = true;
            voteBtn.textContent = '🌷 Voto registrato! 🌷';
            voteBtn.style.opacity = '0.7';
            
            // Disabilita le stelle
            const stars = document.querySelectorAll(`#stars-${songId} .star`);
            stars.forEach(star => {
                star.style.pointerEvents = 'none';
                star.style.opacity = '0.7';
            });
            
            // Aggiorna il contatore
            const voteCountElement = document.getElementById(`vote-count-${songId}`);
            voteCountElement.textContent = `🌺 Voti: ${song.votes} | Valutazione media: ${song.avgRating.toFixed(1)}⭐`;
            
            updateStats();
            showNotification(`🎉 Voto registrato per "${song.title}" con ${song.currentUserRating} stelle!`);
        }

        function updateStats() {
            const totalSongs = songs.length;
            const totalVotes = songs.reduce((sum, song) => sum + song.votes, 0);
            const avgRating = totalVotes > 0 ? 
                songs.reduce((sum, song) => sum + (song.avgRating * song.votes), 0) / totalVotes : 0;
            
            document.getElementById('totalSongs').textContent = totalSongs;
            document.getElementById('totalVotes').textContent = totalVotes;
            document.getElementById('avgRating').textContent = avgRating.toFixed(1);
        }

        function showResults() {
            if (songs.length === 0) {
                showNotification('⚠️ Nessun brano caricato!');
                return;
            }

            const leaderboard = document.getElementById('leaderboard');
            const podium = document.getElementById('podium');
            
            // Ordina le canzoni per voti e rating
            const sortedSongs = [...songs]
                .filter(song => song.votes > 0)
                .sort((a, b) => {
                    if (b.votes !== a.votes) return b.votes - a.votes;
                    return b.avgRating - a.avgRating;
                });
            
            if (sortedSongs.length === 0) {
                showNotification('⚠️ Nessun voto registrato ancora!');
                return;
            }
            
            podium.innerHTML = '';
            
            const positions = ['🥇 Primo Posto', '🥈 Secondo Posto', '🥉 Terzo Posto'];
            const classes = ['', 'second', 'third'];
            
            sortedSongs.slice(0, 3).forEach((song, index) => {
                const podiumItem = document.createElement('div');
                podiumItem.className = `podium-item ${classes[index]}`;
                podiumItem.innerHTML = `
                    <div class="position">${positions[index]}</div>
                    <div style="font-weight: bold; margin-bottom: 10px; font-size: 1.1em;">${song.title}</div>
                    <div style="margin-bottom: 5px;">di ${song.artist}</div>
                    <div style="margin-bottom: 5px;">🗳️ Voti: ${song.votes}</div>
                    <div>⭐ Media: ${song.avgRating.toFixed(1)}</div>
                `;
                podium.appendChild(podiumItem);
            });
            
            leaderboard.style.display = 'block';
            leaderboard.scrollIntoView({ behavior: 'smooth' });
            showNotification('📊 Classifica della classe 4 ASU aggiornata!');
        }

        function resetVotes() {
            if (songs.length === 0) {
                showNotification('⚠️ Nessun brano da resettare!');
                return;
            }

            if (confirm('Sei sicuro di voler resettare tutti i voti della classe 4 ASU?')) {
                songs.forEach(song => {
                    song.votes = 0;
                    song.ratings = [];
                    song.avgRating = 0;
                    song.currentUserRating = 0;
                    
                    // Riabilita elementi
                    const voteBtn = document.getElementById(`vote-btn-${song.id}`);
                    if (voteBtn) {
                        voteBtn.disabled = false;
                        voteBtn.textContent = '🌸 Conferma il tuo voto 🌸';
                        voteBtn.style.opacity = '1';
                    }
                    
                    // Riabilita stelle
                    const stars = document.querySelectorAll(`#stars-${song.id} .star`);
                    stars.forEach(star => {
                        star.classList.remove('selected');
                        star.style.pointerEvents = 'auto';
                        star.style.opacity = '1';
                    });
                    
                    // Reset testi
                    const currentRating = document.getElementById(`current-rating-${song.id}`);
                    if (currentRating) {
                        currentRating.textContent = 'Nessuna valutazione selezionata';
                        currentRating.style.color = '#4a5568';
                    }
                    
                    const voteCount = document.getElementById(`vote-count-${song.id}`);
                    if (voteCount) {
                        voteCount.textContent = '🌺 Voti: 0 | Valutazione media: 0.0⭐';
                    }
                });
                
                updateStats();
                document.getElementById('leaderboard').style.display = 'none';
                showNotification('🔄 Tutti i voti della classe 4 ASU sono stati resettati!');
            }
        }

        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 4000);
        }

        // Inizializza le statistiche
        updateStats();
    </script>
</body>
</html>
